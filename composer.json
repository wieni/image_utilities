{
    "name": "wieni/image_utilities",
    "type": "drupal-module",
    "description": "Drupal 8/9 module providing developer-oriented improvements to the core image module",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Wieni",
            "email": "info@wieni.be"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "drupal/core": "^8.5 || ^9.0"
    },
    "require-dev": {
        "composer-runtime-api": "^2.0",
        "ergebnis/composer-normalize": "^2.0",
        "wieni/wmcodestyle": "^1.3"
    },
    "scripts": {
        "coding-standards": [
            "@composer normalize",
            "php-cs-fixer fix --config=.php_cs.php",
            "phpstan analyse"
        ]
    }
}
